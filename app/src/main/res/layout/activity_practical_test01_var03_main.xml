<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.pub.cs.systems.eim.practicaltest01var03.PracticalTest01Var03MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/sndBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Second Activity" />

            <CheckBox
                android:id="@+id/check1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1" />

            <EditText
                android:id="@+id/studId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Student"
                android:inputType="text"
                android:layout_column="2"
                android:layout_row="1"
                android:saveEnabled="false"/>

            <CheckBox
                android:id="@+id/check2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                />

            <EditText
                android:id="@+id/grupaId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Grupa"
                android:inputType="text"
                android:layout_column="2"
                android:layout_row="2"
                android:saveEnabled="false"/>

            <Button
                android:id="@+id/dispBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="DISPLAY INFORMATION"
                android:layout_row="4"
                android:layout_column="0"/>

            <EditText
                android:id="@+id/fullId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Numele si Grupa"
                android:inputType="text"
                android:layout_column="0"
                android:layout_row="5"
                android:visibility="gone"
                android:saveEnabled="false"/>


        </GridLayout>



    </LinearLayout>


</android.support.constraint.ConstraintLayout>
